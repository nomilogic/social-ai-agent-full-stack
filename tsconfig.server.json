  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist/server",
    "rootDir": "server/src",
    "types": ["node"],
    "lib": ["ES2020"],
    "noEmit": false
  },
  "include": [
    "server/src/**/*"
  ],
  "exclude": [
    "client",
    "node_modules",
    "dist"
  ]
}
